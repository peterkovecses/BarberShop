@page
@model BarberShop.Web.Pages.Admin.ServiceTypes.EditModel

<h1>Szolgáltatás típus szerkesztése</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="ServiceType.Id" />

            <div class="form-group">
                <label asp-for="ServiceType.Name" class="control-label"></label>
                <input asp-for="ServiceType.Name" class="form-control" />
                <span asp-validation-for="ServiceType.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ServiceType.Price" class="control-label"></label>
                <input asp-for="ServiceType.Price" class="form-control" />
                <span asp-validation-for="ServiceType.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Módosít" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Vissza a szolgáltatás típusok listájához </a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}