@model BarberShop.Web.Pages.BarbersAppointments.IndexModel

<h1>Lefoglalt időpontok</h1>

<table class="table" id="consultingsTable">
    <thead>
        <tr>
            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.Appointments[0].FullDate)
            </th>

            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.Appointments[0].AppUserName)
            </th>

            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.Appointments[0].ServiceTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Appointments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.AppUserName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ServiceTypeName)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#consultingsTable').dataTable();
        });
    </script>
}
