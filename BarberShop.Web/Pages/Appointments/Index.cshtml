@page
@model BarberShop.Web.Pages.Appointments.IndexModel

<h1>Időpontfoglalás</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BarberId" class="control-label"></label>
                <select asp-for="BarberId" class="form-control" asp-items="Model.Barbers"></select>
            </div>

            <div class="form-group">
                <label asp-for="ServiceTypeId" class="control-label"></label>
                <select asp-for="ServiceTypeId" class="form-control" asp-items="Model.ServiceTypes"></select>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" max="9999-02-20T20:20" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Tovább" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
